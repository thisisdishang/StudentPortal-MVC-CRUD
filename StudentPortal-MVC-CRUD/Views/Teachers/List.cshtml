@{
}

@model List<StudentPortal_MVC_CRUD.Models.Entities.Teacher>

<h1>Teachers</h1>

<table class="table">
    <thead>
        <tr>
            <th>Teacher Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.TeacherId</td>
                <td>@teacher.Name</td>
                <td>@teacher.Email</td>
                <td>@teacher.Phone</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Teachers" asp-action="Edit" asp-route-id="@teacher.TeacherId">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>