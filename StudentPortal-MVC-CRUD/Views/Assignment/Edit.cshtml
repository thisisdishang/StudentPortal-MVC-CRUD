@{
}

@model StudentPortal_MVC_CRUD.Models.Entities.Assignment

<h1>Edit Assignment</h1>

@if (Model is null)
{
    <p>No assignment was found with this Id</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Assignment Id</label>
            <input type="text" class="form-control" asp-for="AssignmentId" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Assignment Number</label>
            <input type="text" class="form-control" asp-for="AssignmentNumber" />
        </div>

        <div class="mt-3">
            <label class="form-label">Assignment Semester</label>
            <input type="text" class="form-control" asp-for="AssignmentSem" />
        </div>

        <div class="mt-3">
            <label class="form-label">Assignment Content</label>
            <input type="text" class="form-control" asp-for="AssignmentContent" />
        </div>

        <div class="mt-3">
            <label class="form-label">Assignment Subject</label>
            <input type="text" class="form-control" asp-for="Subject" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Students">Delete</button>
        </div>
    </form>
}